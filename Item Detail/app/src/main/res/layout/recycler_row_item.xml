<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:id="@+id/cvRecyclerRowItemCard"
        app:cardElevation="3dp"
        android:layout_margin="4dp"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="5.5"
            android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginTop="10dp"
                    android:contentDescription="@string/product_image_main"
                    android:id="@+id/ivRecyclerRowItemImage"
                    android:layout_weight="4"
                    android:scaleType="centerCrop"
                    android:src="@drawable/splashscreen"
                    >
                </ImageView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="2"
                android:baselineAligned="false"
                android:background="@color/colorCardViewBackground"
                android:layout_weight="1.5">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.3"
                    android:padding="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/product_title"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorTitle"
                        android:maxLines="1"
                        android:id="@+id/tvRecyclerRowItemTitle">

                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/product_description"
                        android:textColor="@color/colorDescription"
                        android:textSize="18sp"
                        android:maxLines="1"
                        android:id="@+id/tvRecyclerRowItemDescription">

                    </TextView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".7"
                    android:gravity="center">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/product_price_main"
                        android:textSize="13sp"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrice"
                        android:id="@+id/tvRecyclerRowItemPrice"
                        android:gravity="center_horizontal"
                        android:textStyle="italic">

                    </TextView>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
            
        
    </androidx.cardview.widget.CardView>

</LinearLayout>